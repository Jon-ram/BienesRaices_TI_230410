extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal.text-orange Raíces  
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-wine.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/login") 
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-wine.mb-3.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray(placeholder="Escribe tu email" type="email" name="email") 
                    div 
                        label.block.text-sm.uppercase.text-wine.mb-3.font-bold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray(placeholder="Escribe tu password" type="password" name="password")             
                    div.flex.items-center.justify-between 
                        a.text-gray.text-xs(href="/auth/registro"   class="hover:text-black hover:underline hover:decoration-wine transition-all duration-300") ¿No tienes cuenta? Crea una
                        a.text-gray.text-xs(href="/auth/olvide-password"   class="hover:text-black hover:underline hover:decoration-wine transition-all duration-300") Olvide mi Password
                    input(class="w-full bg-orange text-black font-bold py-3 cursor-pointer hover:bg-black hover:text-white hover:scale-105 focus:bg-black focus:text-white focus:scale-105 transition-all duration-300" type="submit" value="Iniciar Sesión")

