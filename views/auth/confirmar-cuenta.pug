extends ../layout/index

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-black Bienes 
            span.font-normal.text-orange-500 Raíces  
        h2.text-center.text-2xl.font-extrabold.text-gray-700= pagina

    div(class="bg-white shadow py-8 px-4 rounded-lg max-w-md mx-auto") 
        p(class= error ? 'bg-red-500 text-white' : 'bg-orange-500 text-white').py-2.px-5.rounded-lg.w-full.font-bold.text-center.uppercase= mensaje

        if !error
            a(href="/auth/login" class="text-center font-bold text-sm text-gray-600 uppercase mt-10 block") Ya puedes Iniciar Sesión
