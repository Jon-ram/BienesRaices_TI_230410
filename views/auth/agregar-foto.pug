extends ../layout/index

block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token" content= csrfToken)

block contenido
    .py-10.bg-black.text-white
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal.text-gray Ra√≠ces
        h2.text-center.text-2xl.font-extrabold.text-wine= pagina

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(id="imagen" class="dropzone border-dashed border-2 border-gray w-full min:h-96 h-auto rounded flex-col justify-center items-center" method="POST" action=`/auth/agregar-foto/${usuario.id}` data-context="registro")
                input(type="hidden" name="_csrf" value= csrfToken)

            button(id="publicar" class="mt-5 w-full py-3 bg-wine hover:bg-orange-500 rounded text-white font-bold uppercase cursor-pointer" type="button") Subir imagen de perfil

    pre= JSON.stringify(usuario, null, 2)

block scripts
    script(src="/js/agregarImagen.js")
