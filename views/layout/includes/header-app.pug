            input(type="text" id="termino" name="termino" placeholder="Buscar propiedades" class="p-2 rounded-lg shadow text-sm")

            input(type="submit" class="bg-red-600 hover:bg-red-700 rounded-lg text-white uppercase font-bold p-2 cursor-pointer text-sm" value="Buscar" )
