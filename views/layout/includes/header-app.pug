header.bg-gray-800.p-4
    .container.mx-auto.flex.justify-between.items-center
        a(href="/")
            h1.text-2xl.text-white.font-extrabold.text-center Bienes
                span.font-normal.text-orange-500 Raíces

        nav(class="my-5 text-sm md:flex md:items-center md:gap-3 font-bold text-white hidden") 
            a(href="/auth/registro" class="hover:text-orange-400") Crear cuenta
            a(href="/auth/login" class="hover:text-orange-400") Iniciar Sesión

div(class="bg-gray-900 py-5 hidden lg:block")
    div(class="container mx-auto flex justify-between")
        nav(class="flex gap-4 items-center") 
            a(href="/categorias/1" class="text-sm font-bold uppercase text-white hover:text-orange-400") Casas
            a(href="/categorias/2" class="text-sm font-bold uppercase text-white hover:text-orange-400") Departamentos
